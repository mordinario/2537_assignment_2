<%- include("templates/header", {active: "signup"}) %>
<p>Sign Up</p>
<!--Form taken directly from COMP2537 example-->
<form action="/addUser" method="post">
    <input class="form-control" name="name" type="text" placeholder="Enter first name"><br>
    <input class="form-control" name="email" type="text" placeholder="Enter email"><br>
    <input class="form-control" name="password" type="password" placeholder="Set password"><br><br>
    <button class="btn btn-success">Submit</button>
</form>
<br>
<button class="btn btn-primary" onclick="window.location.replace('/login')">Log In Instead</button>
<% if(error) { %>
<br><br>
<p id="error"><%-error%></p>
<% } %>
<%- include("templates/footer") %>