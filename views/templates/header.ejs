<!DOCTYPE html>
<html lang="en">
<!--Main page-->
<head>
    <meta charset="utf8">
    <title><%=title%></title>
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg class="bi me-2" width="40" height="32" aria-hidden="true">
                    <use xlink:href="#bootstrap"></use>
                </svg>
                <span class="fs-4">COMP 2537</span>
            </a>
            <ul class="nav nav-pills">
                <% if(typeof locals.auth != undefined && locals.auth != "None") { %>
                    <li class="nav-item">
                        <a href="/" class="nav-link <% if(active == "home") { %> active" aria-current="page <% } %>">Home</a>
                    </li> 
                    <li class="nav-item">
                        <a href="/members" class="nav-link <% if(active == "members") { %> active" aria-current="page <% } %>">Members</a>
                    </li>
                    <% if(status == "admin") { %>
                        <li class="nav-item">
                            <a href="/admin" class="nav-link <% if(active == "admin") { %> active" aria-current="page <% } %>">Admin</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link <% if(active == "logout") { %> active" aria-current="page <% } %>">Log Out</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a href="/" class="nav-link <% if(active == "home") { %> active" aria-current="page <% } %>">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/signup" class="nav-link <% if(active == "signup") { %> active" aria-current="page <% } %>">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a href="/login" class="nav-link <% if(active == "login") { %> active" aria-current="page <% } %>">Login</a>
                    </li>
                <% } %>
            </ul>
        </header>
    </div>
    <div class="px-5 mx-3">